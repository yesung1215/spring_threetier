<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.threetier.mapper.MemberMapper">
    <!--회원 가입-->
    <insert id="insert" parameterType="MemberVO">
        INSERT INTO TBL_MEMBER
        VALUES(SEQ_MEMBER.NEXTVAL, #{memberEmail}, #{memberPassword}, #{memberName})
    </insert>

    <!-- 이메일 중복확인-->
    <select id="existMemberEmail" parameterType="String" resultType="_boolean">
        SELECT SUM(CASE WHEN MEMBER_EMAIL = #{memberEmail} THEN 1 ELSE 0 END)
        FROM TBL_MEMBER
    </select>

    <!-- Id로 Member 조회 -->
    <select id="select" parameterType="Long" resultType="MemberVO">
        SELECT ID, MEMBER_EMAIL, MEMBER_PASSWORD, MEMBER_NAME
        FROM TBL_MEMBER
        WHERE ID = #{id}
    </select>

    <!-- memberEmail로 Id조회 -->
    <select id="selectByMemberEmail" parameterType="String" resultType="Long">
        SELECT ID
        FROM TBL_MEMBER
        WHERE MEMBER_EMAIL = #{memberEmail}
    </select>

    <!-- 회원 정보 수정-->
    <update id="update" parameterType="MemberVO">
        UPDATE TBL_MEMBER
        SET MEMBER_PASSWORD = #{memberPassword}, MEMBER_NAME = #{memberName}
        WHERE ID = #{id}
    </update>

    <!-- 회원 탈퇴 -->
    <delete id="delete" parameterType="Long">
        DELETE FROM TBL_MEMBER
        WHERE ID = #{id}
    </delete>

</mapper>